<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2b8b57"
    tools:context="com.example.user.projekiak2017.MainActivity">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/kabupaten_boyolali"
        android:layout_gravity="center"/>

    <TextView
        android:textColor="#000"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/menuDef"
                    android:background="#3cb371"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:src="@drawable/menu_def"
                        android:background="@drawable/border_lingkaran"
                        android:layout_marginRight="20dp"
                        android:id="@+id/imgdef"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/imgdef"
                        android:layout_centerVertical="true"
                        android:text="DEFINISI"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/menuAs"
                    android:background="#3cb371"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:src="@drawable/menu_asal"
                        android:background="@drawable/border_lingkaran"
                        android:layout_marginRight="20dp"
                        android:id="@+id/imgasal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/imgasal"
                        android:layout_centerVertical="true"
                        android:text="ASAL USUL"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/menuKul"
                    android:background="#3cb371"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:src="@drawable/menu_kul"
                        android:background="@drawable/border_lingkaran"
                        android:layout_marginRight="20dp"
                        android:id="@+id/imgkul"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/imgkul"
                        android:layout_centerVertical="true"
                        android:text="KULINER"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/menuSoal"
                    android:background="#3cb371"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:src="@drawable/menu_soal"
                        android:background="@drawable/border_lingkaran"
                        android:layout_marginRight="20dp"
                        android:id="@+id/imgwis"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/imgwis"
                        android:layout_centerVertical="true"
                        android:text="SOAL"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
